{
  "main": "src/index.ts",
  "scripts": {
    "install": "npm i --registry=https://registry.npm.taobao.org",
    "lint": "tslint -p . --fix",
    "start": "ts-node src/index.ts",
    "dev": "nodemon -e ts -x ts-node src/index.ts | pino -l",
    "test": "export NODE_ENV=test && mocha -r ts-node/register test/api/test-*.ts --exit | pino -l",
    "prettier": "prettier --write {src,scripts,test}/**/*.ts && npm run lint",
    "code": "cd scripts && ts-node gencode.ts -P .",
    "deploy": "git pull && npm run install -- --production && pm2 startOrGracefulReload app.json",
    "logs": "tail -F ./logs/*.log | pino -l"
  },
  "engine-strict": {
    "node": ">=8.0"
  }
}
