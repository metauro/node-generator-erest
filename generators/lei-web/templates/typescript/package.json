{
  "main": "src/index.ts",
  "scripts": {
    "tnpm": "npm i --registry=https://registry.npm.taobao.org",
    "start": "ts-node src/index.ts",
    "dev": "nodemon -e ts -x ts-node src/index.ts",
    "test": "export NODE_ENV=test && mocha -r ts-node/register test/api/test-*.ts --exit",
    "test-cov": "export NODE_ENV=test && nyc mocha",
    "docs": "cd docs && git add . && git commit && git push",
    "format": "prettier --write {src,scripts,test}/**/*.ts",
    "code": "cd scripts && ts-node gencode.ts -P .",
    "deploy": "git pull && npm run tnpm && tsc && pm2 startOrGracefulReload app.json",
    "logs": "tail -F ./logs/*.log | pino-pretty -l -t \"SYS:mm-dd HH:MM:ss.l\""
  },
  "engine-strict": {
    "node": ">=8.0"
  }
}
